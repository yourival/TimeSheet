@using Microsoft.Azure.ActiveDirectory.GraphClient
@model IEnumerable<Group>

<h2>/Groups</h2>
<p>
    @Html.ActionLink("Create New", "GroupCreate")
</p>
<table id="directoryObjects" class="table table-bordered table-striped">
    <tr>
        <th>
            DisplayName
        </th>
        <th>
            MailNickName
        </th>
        <th>
            Description
        </th>
        <th>
            ObjectId
        </th>
        <th>
            Mail
        </th>
        <th />
    </tr>
    @foreach (var item in Model)
    {
        var group = item as Group;
        <tr>
            <td>
                @Html.DisplayFor(modelItem => group.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => group.MailNickname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => group.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => group.ObjectId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => group.Mail)
            </td>
            <td>
                @Html.ActionLink("Edit", "GroupEdit", new { objectId = item.ObjectId }) <br />
                @Html.ActionLink("Details", "GroupDetails", new { objectId = item.ObjectId }) <br />
                @Html.ActionLink("Delete", "GroupDelete", new { objectId = item.ObjectId })  <br />
                @Html.ActionLink("Members", "GroupGetMembers", new { objectId = item.ObjectId }) <br />
                @Html.ActionLink("GroupMembership", "GroupGetGroups", new { objectId = item.ObjectId }) <br />
            </td>
        </tr>
    }
</table>

@if (ViewBag.ErrorMessage == "AuthorizationRequired")
{
    <p>You have to sign-in to see groups. Click @Html.ActionLink("here", "Group", "ADManagement", new { reauth = true }, null) to sign-in.</p>
}
