@using Microsoft.Azure.ActiveDirectory.GraphClient
@model IList<User>

@{
    ViewBag.Title = "GetMembers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>/Group/GetMembers</h2>
<p>
    @Html.ActionLink("Back to Group", "Group")
</p>
<table id="directoryObjects" class="table table-bordered table-striped">
    <tr>
        <th>
            UserPrincipalName
        </th>
        <th>
            DisplayName
        </th>
        <th>
            JobTitle
        </th>
        <th>
            ObjectId
        </th>
    </tr>
    @foreach (var item in Model)
    {
        var user = item as User;
        <tr>
            <td>
                @Html.DisplayFor(modelItem => user.UserPrincipalName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.ObjectId)
            </td>
        </tr>
    }
</table>

@if (ViewBag.ErrorMessage == "AuthorizationRequired")
{
    <p>You have to sign-in to see Users. Click @Html.ActionLink("here", "GroupGetMembers", "ADManagement", new { reauth = true }, null) to sign-in.</p>
}
