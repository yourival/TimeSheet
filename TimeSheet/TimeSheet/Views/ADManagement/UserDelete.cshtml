@model Microsoft.Azure.ActiveDirectory.GraphClient.User
@{
    ViewBag.Title = "Delete ADUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Delete ADUser</h2>

<h3>Are you sure you want to delete this user?</h3>
<fieldset>
    <legend>User</legend>
    <div class="display-label">
        @Html.DisplayNameFor(model => model.UserPrincipalName)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UserPrincipalName)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.ObjectId)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ObjectId)
    </div>
</fieldset>
@using (Html.BeginForm())
{
    <p>
        @Html.ValidationSummary(true)
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to User", "User")
    </p>
}
@if (ViewBag.ErrorMessage == "AuthorizationRequired")
{
    <p>You have to sign-in. Click @Html.ActionLink("here", "UserDelete", "ADManagement", new { reauth = true }, null) to sign-in.</p>
}
