@model IEnumerable<Holiday>
@{
    ViewBag.Title = "Holidays";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()
<div class="container" align="center">
    <h2>Holidays</h2>
    @if (Model.Count() != 0)
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.HolidayDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HolidayName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HolidayDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HolidayName)
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No holiday is stored in the database.</p>
    }
    <input type="button" value="Update" class="btn btn-primary" onclick="location.href='@Url.Action("UpdateHolidays", "Admin")'" />
</div>
