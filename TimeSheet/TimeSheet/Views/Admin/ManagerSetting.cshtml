@model IEnumerable<TimeSheet.Models.Manager>

@{
    ViewBag.Title = "ManagerSetting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="container" align="center">
        <h2>ManagerSetting</h2>

        <h4>@Html.ActionLink("Create New", "CreateManager")</h4>
        <table class="table-fill">
            <tr>
                <th>@Html.DisplayNameFor(model => model.ManagerID)</th>
                @foreach (var item in Model)
                {
                    <td>@Html.DisplayFor(modelItem => item.ManagerID)</td>
                }
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ManagerName)
                </th>
                @foreach (var item in Model)
                {
                <td>
                    @Html.DisplayFor(modelItem => item.ManagerName)
                </td>
                }
            </tr>
            <tr>
                @foreach (var item in Model)
                {
                    <th></th>
                    @Html.HiddenFor(modelItem => item.id)
                    <td>
                        @Html.ActionLink("Edit", "EditManager", "Admin", new { id = item.id }, null) |
                        @Html.ActionLink("Delete", "DeleteManager", "Admin", new { id = item.id }, null)
                    </td>
                }
            </tr>
        </table>
    </div>
</body>
