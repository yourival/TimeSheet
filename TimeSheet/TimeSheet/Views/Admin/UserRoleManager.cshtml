@model UserRoleSetting

@{
    ViewBag.Title = "CreateManager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="container" align="center">
        <h2>Add New User Role</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <table class="table-fill">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <tr>
                    <th>@Html.LabelFor(model => model.UserID)</th>
                    <td>
                        @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>@Html.LabelFor(model => model.UserName)</th>
                    <td>
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr>
                    <th>@Html.LabelFor(model => model.IsAdmin)</th>
                    <td>
                        @Html.EditorFor(model => model.IsAdmin, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IsAdmin, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>@Html.LabelFor(model => model.IsManager)</th>
                    <td>
                        @Html.EditorFor(model => model.IsManager, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IsManager, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th>@Html.LabelFor(model => model.IsAccountant)</th>
                    <td>
                        @Html.EditorFor(model => model.IsAccountant, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IsAccountant, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>
            <br/>
            <input type="submit" value="Add" class="btn btn-primary" />  
        }

        <br />
        <div>
            @Html.ActionLink("Back to Manager Setting", "ManagerSetting")
        </div>
    </div>
</body>