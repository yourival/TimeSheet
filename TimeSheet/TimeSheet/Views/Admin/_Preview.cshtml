@model DataTable
@using System.Data;

<br/>
@if (Model.Rows.Count != 0)
{
    <div class="payroll-preview">
        <table id="summary-table" align="center">
            <thead>
                <tr>
                    <td class="title" colspan="5">
                        Authorised Leave & Additional Hours
                    </td>
                    <td></td>
                    <td colspan="2" rowspan="2">
                        <img class="img-responsive table-logo" src="https://cdn2.hubspot.net/hub/2583754/hubfs/website/nan-tien-institute-logo.png" alt="Nan Tien Institute" />
                    </td>
                </tr>
                <tr>
                    <td colspan="5">
                        A list of authorised leave and additional hours during the pay period used for payroll processing
                    </td>
                </tr>
                <tr style="height:10px">&nbsp;</tr>
                <tr>
                    <td>Pay Period:</td>
                    <td colspan="2">
                        @if (ViewBag.Period != null)
                        {
                            @ViewBag.Period
                        }
                    </td>
                </tr>
            </thead>
            <tbody>
                <tr id="column-names">
                    <th style="width:100px">Application ID</th>
                    <th style="width:70px">Employee Card ID</th>
                    <th>Surname</th>
                    <th>First Name</th>
                    <th>Position</th>
                    <th>Date or Period</th>
                    <th style="width:60px">Total Hours</th>
                    <th style="width:130px">Leave Type / Additional Hours</th>
                    <th>Approved By</th>
                    <th>Note</th>
                </tr>
                @foreach (DataRow row in Model.Rows)
                {
                    <tr>
                        @foreach (DataColumn col in Model.Columns)
                        {
                                <td>@row[col.ColumnName]</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <button id="printBtn" class="btn btn-default do-not-print" onclick="javascript: window.print()">Print</button>
}
else
{
    @:No application found in the pay period.
}

