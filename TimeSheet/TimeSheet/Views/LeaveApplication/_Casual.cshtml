@model TimeSheet.Models.LeaveApplicationViewModel

<head>
    @Styles.Render("~/Content/css")
</head>


<div class="hrForm-content">
    <div>
        @using (Html.BeginForm("Index", "LeaveApplication", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.LeaveApplication.UserID)
            <form>
                <div class="form-group">
                    <label class="col-sm-offset-1 col-sm-2" for="casual-start">
                        @Html.LabelFor(model => model.LeaveApplication.StartTime)
                    </label>
                    <div class="col-sm-8">
                        <p>
                            @Html.EditorFor(model => model.LeaveApplication.StartTime, new { htmlAttributes = new { @class = "form-control", @id = "casual-start" } })
                            @Html.ValidationMessageFor(model => model.LeaveApplication.StartTime, "", new { @class = "text-danger" })
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-offset-1 col-sm-2" for="casual-end">
                        @Html.LabelFor(model => model.LeaveApplication.EndTime)
                    </label>
                    <div class="col-sm-8">
                        <p>
                            @Html.EditorFor(model => model.LeaveApplication.EndTime, new { htmlAttributes = new { @class = "form-control", @id = "casual-end" } })
                            @Html.ValidationMessageFor(model => model.LeaveApplication.StartTime, "", new { @class = "text-danger" })
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-offset-1 col-sm-2" for="casual-manager">
                        @Html.Label("Manager")
                    </label>
                    <div class="col-sm-8">
                        <p>
                            @Html.DropDownList("manager", (IEnumerable<SelectListItem>)ViewBag.Manager, htmlAttributes: new { @class = "form-control", @id = "casual-manager" })
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-offset-1 col-sm-2" for="casual-comment">
                        @Html.LabelFor(model => model.LeaveApplication.Comment)
                    </label>
                    <div class="col-sm-8">
                        <p>
                            @Html.EditorFor(model => model.LeaveApplication.Comment, new { htmlAttributes = new { @class = "form-control", @id = "casual-comment", @style = "resize: vertical" } })
                        </p>
                    </div>
                </div>
                <div class="row" align="right">
                    <div class="col-sm-offset-1 col-sm-10">
                        <a href="#CasualDetail" data-toggle="collapse">
                            <p>
                                Click here if you want to edit details
                                <span class="glyphicon glyphicon-pencil"></span>
                            </p>
                        </a>
                    </div>
                </div>

                <div class="appDetails">
                    <div class="col-sm-offset-1 col-sm-2"></div>
                    <div id="casual-form" class="col-sm-8"></div>

                </div>

                <div class="button-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>

            </form>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script>
    function renderCasualForm() {
        var start = $('#casual-start').val();
        var end = $('#casual-end').val();

        $("#casual-form").text("Loading...");

        //Clear previous validation message
        $("#casual-form").removeData("validator");
        $("#casual-form").removeData("unobtrusiveValidation");

        $.ajax({
            url: "/LeaveApplication/CreateLeaveForm",
            type: "GET",
            data: { start: start, end: end, leaveType: 0 }
        })
        .done(function (partialViewResult) {
            $("#casual-form").html(partialViewResult);

            // Enable submit button
            $("#submit-btn").prop("disabled", false);

            //Enable jquery validation
            $.validator.unobtrusive.parse("#casual-form");

        });
    }

    $(document).ready(function () {
        //var fullDate = new Date();

        $("#casual-start").val(getFormattedDate(new Date()));
        $("#casual-end").val(getFormattedDate(new Date()));
        renderCasualForm();

        // When there is any change on dates
        $("#casual-start").on("change", function () {
            if ($("#casual-start").val() > $("#casual-end").val())
                $("#casual-end").val($("#casual-start").val());
            renderCasualForm();
        });
        $("#casual-end").on("change", function () {
            if ($("#casual-start").val() > $("#casual-end").val())
                $("#casual-start").val($("#casual-end").val());
            renderCasualForm();
        });
    });
</script>
