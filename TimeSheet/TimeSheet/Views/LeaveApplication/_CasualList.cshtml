@model TimeSheetContainer
<br />

<body>
    <div align="center" class="leaveDetail">
        <div id="CasualDetail" class="collapse in row">
            <table class="table table-responsive nomoresheet">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Start</th>
                        <th>Lunch</th>
                        <th>End</th>
                        <th>Work Hours</th>
                    </tr>
                </thead>
                
                    @for (int i = 0; i < Model.TimeRecords.Count; i++)
                    {
                        <tbody>
                            <tr>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                @Html.HiddenFor(m => m.TimeRecords[i].id)
                                @Html.HiddenFor(m => m.TimeRecords[i].UserID)
                                @Html.HiddenFor(m => m.TimeRecords[i].RecordDate)
                                @Html.HiddenFor(m => m.TimeRecords[i].StartTime)
                                @Html.HiddenFor(m => m.TimeRecords[i].EndTime)
                                @Html.HiddenFor(m => m.TimeRecords[i].LunchBreak)
                                @Html.HiddenFor(m => m.TimeRecords[i].IsHoliday)
                                @Html.HiddenFor(m => m.TimeRecords[i].Flexi)

                                <td class="dateSpecific">
                                    @String.Format("{0:ddd, dd/MM/yyyy}", Model.TimeRecords[i].RecordDate)
                                </td>
                                <td>
                                    @Html.EditorFor(m => m.TimeRecords[i].StartTime, new { htmlAttributes = new { @class = "starttime form-control", @type = "time", @step = "1800" } })
                                    @Html.ValidationMessageFor(m => m.TimeRecords[i].WorkHours, "", new { @class = "text-danger" })
                                </td>
                                <td>
                                    @Html.EditorFor(m => m.TimeRecords[i].LunchBreak, new { htmlAttributes = new { @class = "lunchtime form-control", @type = "number", @step = "0.5", @min = 0, @max = 7.5 } })
                                    @Html.ValidationMessageFor(m => m.TimeRecords[i].WorkHours, "", new { @class = "text-danger" })
                                </td>
                                <td>
                                    @Html.EditorFor(m => m.TimeRecords[i].EndTime, new { htmlAttributes = new { @class = "endtime form-control", @type = "time", @step = "1800" } })
                                    @Html.ValidationMessageFor(m => m.TimeRecords[i].WorkHours, "", new { @class = "text-danger" })
                                </td>
                                <td>
                                    @Html.EditorFor(m => m.TimeRecords[i].WorkHours, new { htmlAttributes = new { @class = "worktime form-control", @type = "number", @step = "0.5", @min = 0, @max = 7.5 } })
                                    @Html.ValidationMessageFor(m => m.TimeRecords[i].WorkHours, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                        </tbody>
                    }
                        
            </table>
            
        </div>
    </div>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




