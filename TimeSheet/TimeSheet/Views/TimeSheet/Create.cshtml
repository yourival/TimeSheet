@model List<TimeSheet.Models.TimeRecord>

@{
    ViewBag.Title = "Create";
    int i = 0;
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    //@Html.AntiForgeryToken()

    <table>
        <tr>
            <th>Date</th>
            <th>Start Time</th>
            <th>Lunch Start Time</th>
            <th>Lunch End Time</th>
            <th>End Time</th>
            <th>Users</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <th class="form-group">
                    @TimeSheet.Models.PayPeriod.GetStartDay(2018, 1).AddDays(i)
                </th>

                <th class="form-group">
                        @Html.EditorFor(model => item.StartTime, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => item.StartTime, "", new { @class = "text-danger" })
                </th>

                <th class="form-group">
                        @Html.EditorFor(model => item.EndTime, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => item.LunchBreak, "", new { @class = "text-danger" })
                </th>

                <th class="form-group">
                        @Html.EditorFor(model => item.EndTime, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => item.EndTime, "", new { @class = "text-danger" })
                </th>

                <th class="form-group">
                        @Html.EditorFor(model => item.UserID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => item.UserID, User.Identity.Name, new { @class = "text-danger" })
                </th>

                <th class="form-group">
                    @Html.EditorFor(model => item.Flexi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => item.Flexi,"", new { @class = "text-danger" })
                </th>

                <th class="form-group">
                    @Html.DropDownListFor(model => item.lt, new SelectList(
                  new List<Object>{
                       new { value = 0 , text = "Sick Leave"  },
                       new { value = 1 , text = "Flexi Leave" },
                       new { value = 2 , text = "Annual Leave"}
                    },
                  "value",
                  "text",
                   2))
                    @Html.ValidationMessageFor(model => item.lt, "", new { @class = "text-danger" })
                </th>
            </tr>
            i++;
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </table>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
