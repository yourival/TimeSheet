@model List<LeaveBalanceViewModel>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@if (Model.Count != 0)
{
    <table class="table-fill">
        <tr>
            <th rowspan="2">Name</th>
            <th colspan="3">Balance (hrs)</th>
            <th rowspan="2">Note</th>
        </tr>
        <tr>
            <th>Sick Leave</th>
            <th>Flexi Leave</th>
            <th>Annual Leave</th>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].UserName</td>
                @for (int j = 0; j < 3; j++)
                {
                    <td>@Html.DisplayFor(m => m[i].Balances[j], new { @class = "col" })</td>
                }
                <td>@Model[i].Note</td>
            </tr>
        }
    </table>
}
else
{
    <div>No data was loaded.</div>
}
